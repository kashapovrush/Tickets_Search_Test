<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.CountrySelectedFragment">

    <LinearLayout
        android:id="@+id/inputText"
        android:layout_width="328dp"
        android:layout_height="122dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_input_search_text"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="90dp"
            android:background="@drawable/background_input_inner"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_arrow_back" />


            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_from"
                    android:layout_width="232dp"
                    android:layout_height="32dp"
                    android:background="@null"
                    android:drawableEnd="@drawable/replace"
                    android:inputType="text"
                    android:text="Москва"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey6"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="232dp"
                    android:layout_height="1dp"
                    android:background="@color/grey5" />

                <EditText
                    android:id="@+id/et_to"
                    android:layout_width="232dp"
                    android:layout_height="32dp"
                    android:background="@null"
                    android:inputType="text"
                    android:text="Сочи"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey6"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/chips"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/inputText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/btn_date_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_input_search_text"
                android:gravity="center"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/image_plus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/date_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="обратно"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/day_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="сб"
                    android:visibility="gone"
                    android:textColor="@color/grey6"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_date_from"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_input_search_text"
                android:gravity="center"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/date_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 фев. "
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/day_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="сб"
                    android:textColor="@color/grey6"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_input_search_text"
                android:gravity="center"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:src="@drawable/profile_disabled" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1, эконом"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_input_search_text"
                android:gravity="center"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:src="@drawable/filter_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="фильтры"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chips">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прямые рейсы"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_offers_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_tickets"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_button"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:theme="@style/Base.Theme.TicketsSearchTest"
        android:text="Посмотреть все билеты"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>