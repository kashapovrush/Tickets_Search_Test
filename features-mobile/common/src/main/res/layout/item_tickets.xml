<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="140dp"
    >

    <FrameLayout
        android:id="@+id/badge_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:background="@drawable/background_badge"
        >

        <TextView
            android:id="@+id/badge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прилет вечером"
            android:textColor="@color/white"
            android:paddingVertical="2dp"
            android:paddingHorizontal="10dp"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="328dp"
        android:layout_height="117dp"
        android:layout_gravity="center"
        android:background="@drawable/background_ticket_card"
        >



        <TextView
            android:id="@+id/price_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 990 ₽"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:textSize="22sp"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:layout_marginStart="16dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logo_red"
                android:layout_gravity="center_vertical"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="32dp"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/departure_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03:15"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/departure_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:text="VKO"
                        android:textColor="@color/grey6"
                        />
                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="40dp"
                    />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="54dp"
                    >
                    <TextView
                        android:id="@+id/arrival_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:10"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/arrival_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:text="AER"
                        android:textColor="@color/grey6"
                        />
                </FrameLayout>

            </FrameLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/flight_time"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="4 часа в пути"
            android:textColor="@color/white"
            android:layout_marginStart="153dp"
            android:textSize="14sp"
            android:layout_marginTop="63dp"
            />

        <TextView
            android:id="@+id/has_transfer"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="Без пересадок"
            android:textColor="@color/white"
            android:layout_marginStart="153dp"
            android:textSize="14sp"
            android:layout_marginTop="83dp"
            />

    </FrameLayout>


</FrameLayout>